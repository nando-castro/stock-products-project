{
  "compilerOptions": {
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts"], // Diretórios e arquivos a serem incluídos na compilação
  "exclude": ["node_modules"],
  // "ts-node": {
  //   "esm": true
  // }
}
